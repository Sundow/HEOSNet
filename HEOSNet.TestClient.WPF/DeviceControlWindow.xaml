<Window x:Class="HEOSNet.TestClient.WPF.DeviceControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HEOSNet.TestClient.WPF"
        mc:Ignorable="d"
        Title="Device Control" Height="150" Width="300"
        Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="PowerOnButton" Content="Power On" Width="100" Margin="5" Click="PowerOnButton_Click"/>
            <Button x:Name="PowerOffButton" Content="Power Off" Width="100" Margin="5" Click="PowerOffButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
