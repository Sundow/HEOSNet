<Window x:Class="HEOSNet.TestClient.WPF.BrowseSourceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Browse Source" Height="520" Width="520"
        Loaded="Window_Loaded">
    <DockPanel Margin="10">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,6">
            <TextBlock Text="Source:" FontWeight="Bold"/>
            <TextBlock x:Name="SourceNameText" Margin="6,0,0,0"/>
            <TextBlock x:Name="StatusText" Margin="16,0,0,0" Foreground="Gray"/>
        </StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TreeView x:Name="FoldersTree" SelectedItemChanged="FoldersTree_SelectedItemChanged"/>
            <ListView x:Name="ItemsList" Grid.Column="1" SelectionMode="Single" SelectionChanged="ItemsList_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" Width="220" DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="Kind" Width="80" DisplayMemberBinding="{Binding Kind}"/>
                        <GridViewColumn Header="Playable" Width="60" DisplayMemberBinding="{Binding Playable}"/>
                    </GridView>
                </ListView.View>
            </ListView>
            <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,6,0,0" HorizontalAlignment="Right">
                <Button x:Name="AddContainerButton" Content="Add Container" Width="110" Margin="0,0,6,0" Click="AddContainerButton_Click" IsEnabled="False"/>
                <Button x:Name="AddTrackButton" Content="Add Track" Width="90" Margin="0,0,6,0" Click="AddTrackButton_Click" IsEnabled="False"/>
                <Button x:Name="ReplaceAndPlayButton" Content="Replace &amp; Play" Width="120" Margin="0,0,6,0" Click="ReplaceAndPlayButton_Click" IsEnabled="False"/>
                <Button Content="Close" Width="70" Click="Close_Click"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
