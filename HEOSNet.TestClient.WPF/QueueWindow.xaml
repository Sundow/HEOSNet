<Window x:Class="HEOSNet.TestClient.WPF.QueueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Queue" Height="400" Width="600"
        Loaded="Window_Loaded">
    <DockPanel Margin="10">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,8">
            <Button x:Name="RefreshButton" Content="Refresh" Width="70" Click="RefreshButton_Click" Margin="0,0,6,0"/>
            <Button x:Name="UpButton" Content="Up" Width="60" Click="UpButton_Click" IsEnabled="False" Margin="0,0,6,0"/>
            <Button x:Name="DownButton" Content="Down" Width="60" Click="DownButton_Click" IsEnabled="False" Margin="0,0,6,0"/>
            <Button x:Name="DeleteButton" Content="Delete" Width="70" Click="DeleteButton_Click" IsEnabled="False" Margin="0,0,6,0"/>
            <TextBlock x:Name="StatusText" Margin="12,0,0,0" VerticalAlignment="Center" Foreground="Gray"/>
        </StackPanel>
        <DataGrid x:Name="QueueGrid"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  SelectionChanged="QueueGrid_SelectionChanged"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="#" Width="40" Binding="{Binding Index}"/>
                <DataGridTextColumn Header="Title" Width="200" Binding="{Binding Title}"/>
                <DataGridTextColumn Header="Artist" Width="120" Binding="{Binding Artist}"/>
                <DataGridTextColumn Header="Album" Width="120" Binding="{Binding Album}"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
